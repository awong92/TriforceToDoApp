<?xml version="1.0" encoding="utf-8"?>
<!-- Team Triforce (36) : registration page -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDD73"
    android:orientation="vertical" >

    <!-- title of register screen -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#A67D00" >

        <TextView
            android:id="@+id/titleRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/titleRegistration"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:typeface="serif" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/solid_dark_blue" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#245A7A" >

        <TextView
            android:id="@+id/registrationBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:text="All fields are required"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/black_yellow_gradient" />
    <!-- Username tag above the text field where the user inputs a new username -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/regTitleUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#03436A"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/usernameError"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@android:drawable/ic_delete" />
    </TableRow>

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/newUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- Password tag above the text field where the user inputs a new password -->

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/regTitlePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#03436A"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/passwordError"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@android:drawable/ic_delete" />
    </TableRow>

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- Name tag above the text field where the user inputs a new name -->

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/regTitlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#03436A"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/nameError"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@android:drawable/ic_delete" />
    </TableRow>

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/newName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- Email tag above the text field where the user inputs a new email -->

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/regTitleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#03436A"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/emailError"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@android:drawable/ic_delete" />
    </TableRow>

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/newEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <!-- Register button to create new account -->

        <Button
            android:id="@+id/registerUserButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/register" />

        <Button
            android:id="@+id/cancelRegButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel" />
    </TableRow>

</LinearLayout>