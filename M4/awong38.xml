<?xml version="1.0" encoding="UTF-8"?>

<!-- awong38.xml -->
<!-- CS 2340 M4 -->

<project name="M4" default="all" basedir=".">

	<target name="init">
		<property name="src.dir" value="src" />
		<property name="lib.dir" value="lib" />
		<property name="classpath" value="${lib.dir}/resources.jar" />
	</target>
	
	<target name="prepare" depends="init">
		<mkdir dir="build.dir" />
		<mkdir dir="apidoc.dir" />
		<mkdir dir="build.dir/classes" />
		<mkdir dir="build.dir/jar" />
	</target>

	<target name="compile" depends="prepare">
		<javac srcdir="${src.dir}" destdir="build.dir/classes">
			<src path="${src.dir}" />
			<classpath>
				<pathelement path="${classpath}"/> 
			</classpath>
		</javac>
	</target>

	<target name="javadoc" depends="compile">
		<javadoc sourcepath="${src.dir}" access="public" destdir="apidoc.dir"
			extdir="${lib.dir}">
			<bottom>
					<![CDATA[<i>Copyright &#169; 2011 Team 36 CS2340.  All Rights Reserved.</i>]]>
			</bottom>
		</javadoc>
	</target>

	<target name="jar" depends="compile">
		<jar destfile="build.dir/jar/AntLabRun.jar" basedir="build.dir/classes">
			<manifest>
				<attribute name="Main-Class" value="edu.gatech.oad.antlab.pkg1.AntLabMain" />
				<attribute name="Class-Path" value="${classpath}" />
			</manifest>
		</jar>
	</target>

	<target name="run" depends="jar">
		<java jar="build.dir/jar/AntLabRun.jar" fork="true">
			<classpath>
				<pathelement location="${classpath}"/>
	        	<pathelement location="java.class.path"/>
			</classpath>
        </java>
	</target>
	
	<target name="all" depends="run" />
	
	<target name="clean" depends="init" >
		<delete dir="build.dir" />
		<delete dir="apidoc.dir" />
	</target>

</project>