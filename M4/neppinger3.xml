
<!-- M4 -->
<project name="M4" default="all" basedir=".">

	<target name="init">
		<!--  creats a bunch of vars basically to be used later -->
		<property name="src.dir" value="src" />
		<property name="lib.dir" value="lib" />
		<property name="build.dir" value="build" />
		<property name="classes.dir" value="build/classes" />
		<property name="jar.dir" value="build/jar" />
		<property name="apidoc.dir" value="apidoc" />
		<property name="classpath" value="lib/resources.jar" />
	</target>

	<!-- Prepare sets up the folders for the compile-->
	<target name="prepare" depends="init">
		<mkdir dir="build" />
		<mkdir dir="apidoc" />
		<mkdir dir="build/classes" />
	</target>

	<target name="compile" depends="prepare">
		<javac srcdir="${src.dir}" destdir="${classes.dir}" >
		 <classpath path ="${classpath}"/>
		 </javac>
	</target>

	<!--  Javadocing part -->
	<target name="javadoc" depends="compile">
		<javadoc sourcepath="${src.dir}" access="public" destdir="${apidoc.dir}">
			<classpath path= "${classpath}" />
			<bottom>
				<![CDATA[<i>Copyright &#169; 2011 Team 36 CS2340.  All Rights Reserved.</i>]]>
			</bottom>
		</javadoc>
	</target>

	<!--  Jar part of the xml -->
	<target name="jar" depends="compile">
		<mkdir dir="build/jar" />
		<jar destfile="${jar.dir}/AntLabRun.jar" basedir="${classes.dir}">
			<manifest>
				<!-- sets the main default run to AntLabMain and specifies the class path as two levels above destFile-->
				<attribute name="Class-Path" value="../../${classpath}" />
				<attribute name="Main-Class" value="edu/gatech/oad/antlab/pkg1/AntLabMain" />
			</manifest>
		</jar>
	</target>

	<!--  runs the xml through the jar -->
	<target name="run" depends="jar">
		<java jar="${jar.dir}/AntLabRun.jar" fork="true" />
	</target>

	<target name="all" depends="run, javadoc" />
	
	<!--  delete EVERYTHING!! -->
	<target name="clean" depends="init">
		<delete dir="build" />
		<delete dir="apidoc" />
	</target>

</project>