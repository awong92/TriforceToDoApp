<?xml version="1.0" encoding="UTF-8"?>


<!-- M4 -->
<project name="M4" default="all" basedir=".">
	<!-- our init target is a prereq for everything -->
	<target name="init">
		<property name="src.dir" value="src" />
		<property name="build.dir" value="build" />
		<property name="apidoc.dir" value ="apidoc" />
		<property name="lib.dir" value ="lib" />
		<property name="jar.dir" value ="${build.dir}/jar" />
		<property name="classes.dir" value="${build.dir}/classes" />
	</target>

	<!-- prepare is a prereq for most tasks except cleanup
     -->
	<target name="prepare" depends="init">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${apidoc.dir}" />
	</target>

	<!-- compile the code -->
	<target name="compile" depends="prepare">
		<mkdir dir="${build.dir}/classes"/>
		<javac srcdir="${src.dir}" destdir="${build.dir}">
			<classpath path="${classpath}"/>
		</javac>
	</target>

	<!-- Jar  -->
	<target name="jar" depends="compile">
		<mkdir dir ="${build.dir}/jar"/>
		<jar destfile="$AntlabRun.jar"/>
		<include name="edu/gatech/oad/antlab/pkg1/*.class" />
		<include name="edu/gatech/oad/antlab/pkg2/*.class" />
		<manifest>
			<attribute name="Main-Class" value="edu.gatech.oad.antlab.pkg1.AntLabMain"/>
			<attribute name="Class-Path" value="lib/resources.jar" />
		</manifest>
	</target>

	<!-- Javadoc -->
	<target name="javadoc" depends="compile">
		<javadoc sourcepath="${src.dir}" access="public" destdir="${apidoc}" 
   			extdir="lib.dir">
			<bottom>
				<![CDATA[<i>Copyright &#169; 2011 Team 36 Tri-Force CS2340. All Rights Reserved.</i>]]>
   			</bottom>
	</javadoc>
</target>


<!-- run the application -->
<target name="run" depends="jar">
	<java classname="edu.gatech.oad.antlab.pkg1.AntLabMain">
		<classpath>
			<pathelement location="${build.dir}" />
			<pathelement location="${build.dir}/{jar.dir}/AntLabMain.jar" />
		</classpath>
	</java>
</target>

<!-- clean up all files generated by the build -->
<target name="clean" depends="init" >
	<delete dir="${build.dir}" />
	<delete dir="${apidoc.dir}"/>
</target>

<!-- run all tasks except cleanup -->
<target name="all" depends="run" />

</project>