<?xml version="1.0" encoding="utf-8"?>
<!-- Team Triforce (36) : list of tasks page -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_task_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Title "TASK LIST" -->

    <TextView
        android:id="@+id/titleTaskList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/titleTaskList"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="serif" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/black_white_gradient" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TableRow
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/filteringString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/solid_white" />

    <!-- View that displays the tasks -->

    <ListView
        android:id="@android:id/list"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#000000"
        android:clickable="true"
        android:divider="#AAAAAA"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false" >
    </ListView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</LinearLayout>