<!-- build.xml -->

<project name="M4" basedir="." default="all">

	<!-- Init: Initializes new directories and the classpath -->
	<target name="init">
		<echo>Initializing...</echo>
		<property name="src.dir" value="src"/>
		<property name="lib.dir" value="lib"/>
		<property name="build.dir" value="build"/>
		<property name="classes.dir" value="build/classes"/>
		<property name="apidoc.dir" value="apidoc"/>
		<property name="classpath" value="lib/resources.jar"/>
		<property name="jar.dir" value="build/jar"/>
	</target>
	
	<!-- Prepare: makes required directories -->
	<target name="prepare" depends="init">
		<echo>Making directories...</echo>
		<mkdir dir="apidoc"/>
		<mkdir dir="build"/>
		<mkdir dir="build/classes"/>
		<mkdir dir="build/jar"/>
	</target>
	 
	<!-- Compile: Compiles required java files -->
	<target name="compile" depends="prepare">
		<echo>Compiling...</echo>
		<javac srcdir="src" destdir="build/classes" classpath="lib/resources.jar"/>
	</target>
	
	<!-- Javadoc: Creates Javadoc for all src files; stored in apidoc -->
	<target name="javadoc" depends="compile">
		<echo>Creating Javadocs...</echo>
		<javadoc sourcepath="src" access="public" destdir="apidoc" classpath="lib/resources.jar">
			<bottom>
				<![CDATA[<i>Copyright &#169' 2011 Team 36 CS2340. All Rights Reserved.</i>]]>
			</bottom>
		</javadoc>
	</target>
	
	<!-- Jar: Package compiled classes; saved as AntLabRun.jar... -->
	<target name="jar" depends="compile">
		<echo>Creating AntLabRun.jar...</echo>
		<jar destfile="build/jar/AntLabRun.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="edu/gatech/oad/antlab/pkg1/AntLabMain"/>
				<attribute name="Class-Path" value="../../lib/resources.jar"/>
			</manifest>
		</jar>
	</target>
	
	<!-- Run: Start program execution; run jar file -->
	<target name="run" depends="jar">
		<echo>Running...</echo>
		<java jar="${jar.dir}/AntLabRun.jar" fork="true"/>
	</target>
	
	<!-- All: Makes it go; except for clean -->
	<target name="all" depends="run, javadoc"/>
		
	<!-- Clean: deletes previously created directories -->
	<target name="clean" depends="init">
		<echo>Cleaning...</echo>
		<delete dir="build"/>
		<delete dir="apidoc"/>
	</target>

</project>