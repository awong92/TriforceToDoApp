<?xml version="1.0" encoding="UTF-8"?>
<!-- M4 -->
<!-- build.xml file -->


<project name="M4" basedir="." default="all">
	<target name="init">
		<property name="src.dir" value="src"/>
		<property name="lib.dir" value="lib"/>
		<property name="build.dir" value="build"/>
	</target>
	
	<target name="prepare" depends="init">
		<mkdir dir="${apidoc.dir}"/>
		<mkdir dir="${build.dir}"/>
	</target>
	
	<target name="compile" depends="prepare">
		<mkdir dir="${build.dir}/classes"/>
		<javac srcdir="${src.dir}" destdir="${build.dir}">
			<classpath>
				<pathelement path= "${lib.dir}/resources.jar"/>
			</classpath>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<mkdir dir="${build.dir}/jar.dir"/>
		<jar destfile="AntLabRun.jar">
			<include name="edu/gatech/oad/antlab/**/*.class"/>
			<manifest>
				<attribute name="Main-Class" value="edu/gateh/oad/antlab/pkg1/AntLabMain"/>
				<attribute name="Class-Path" value="lib/resources.jar"/>
			</manifest>
		</jar>
	</target>
		
	<target name="javadoc" depends="compile">
		<javadoc sourcepath="${src.dir}" access="public" destdir="${apidoc.dir}" 
			extdir="lib.jar">
			<bottom>
				<![CDATA[<i>Copyright &#169' 2011 Team 36 CS2340. All Rights Reserved.</i>]]>
			</bottom>
		</javadoc>
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
		<delete dir="${apidoc.dir}"/>
		<delete dir="${src.dir}"/>
	</target>
	

	<target name="run" depends="jar">
		<java jar="edu/gatech/oad/antlab/pkg1/AntLabMain" fork="true">
    		<classpath>
				<pathelement location="${build.dir}"/>
				<pathelement location="${build.dir}/{jar.dir}/AntLabMain.jar"/>
			</classpath>
 	 	</java>
	</target>
	
	<target name="all" depends="run"/>
		
	

	
</project>
