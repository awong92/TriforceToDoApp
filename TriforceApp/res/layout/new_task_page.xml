<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Title "NEW TASK" -->

    <TextView
        android:id="@+id/headerNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/headerNT"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- Tag asking for Task Name and its edit form -->

    <TextView
        android:id="@+id/taskNamePromptNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskName"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" >
    </EditText>

    <!-- Tag for Task Description and its edit form -->

    <TextView
        android:id="@+id/descriptionPromptNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskDescription"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editTaskDescript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <!-- Prompt for selecting the type of the task -->

    <TextView
        android:id="@+id/taskTypeTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskType"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/newTypeOfTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/task_types_prompt" />

    <TableLayout
        android:id="@+id/tableDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/dateRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <!-- Tag for Due Date of task and its button prompt -->

            <TextView
                android:id="@+id/dateDisplayNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taskDate" />

            <Button
                android:id="@+id/pickDateNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date" />
        </TableRow>

        <TableRow
            android:id="@+id/timeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/timeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taskTime" />

            <Button
                android:id="@+id/pickTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Due" />
        </TableRow>

    </TableLayout>

    <!-- Tag for Location of task and its edit form -->

    <TextView
        android:id="@+id/locationPromptNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taskLocation"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:inputType="textPostalAddress" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/saveButtonNT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save" />

            <Button
                android:id="@+id/cancelButtonNT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel" />
        </TableRow>
    </TableLayout>

</LinearLayout>